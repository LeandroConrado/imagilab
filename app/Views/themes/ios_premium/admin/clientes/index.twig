{% extends "admin/layout.twig" %}

{% block content %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Clientes Cadastrados</span>
        <a href="/admin/clientes/create" class="btn btn-success btn-sm">Novo Cliente</a>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email / Documento</th>
                    <th>Cidade/UF</th>
                    <th>Status</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for cliente in clientes %}
                    <tr>
                        <td>{{ cliente.nome }}</td>
                        <td>{{ cliente.email }}<br><small class="text-muted">{{ cliente.documento }}</small></td>
                        <td>{{ cliente.cidade ? cliente.cidade ~ '/' ~ cliente.estado : 'N/A' }}</td>
                        <td>
                            {% if cliente.status %}
                                <span class="badge bg-success">Ativo</span>
                            {% else %}
                                <span class="badge bg-warning">Inativo</span>
                            {% endif %}
                        </td>
                        <td class="text-end">
                            <a href="/admin/clientes/{{ cliente.id }}/edit" class="btn btn-primary btn-sm">Editar</a>
                            <form action="/admin/clientes/{{ cliente.id }}/delete" method="POST" class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir este cliente?');">
                                <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Nenhum cliente encontrado.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}