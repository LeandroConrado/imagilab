{% extends "admin/layout.twig" %}
{% block content %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center"><span>Pedidos Recebidos</span><a href="/admin/pedidos/create" class="btn btn-success btn-sm">Criar Pedido Manual</a></div>
    <div class="card-body">
        <table class="table table-striped table-hover align-middle">
            <thead><tr><th>Nº Pedido</th><th>Cliente</th><th>Data</th><th>Status</th><th>Total</th><th class="text-end">Ações</th></tr></thead>
            <tbody>
                {% for pedido in pedidos %}
                <tr>
                    <td><strong>{{ pedido.codigo_pedido }}</strong></td>
                    <td>{{ pedido.cliente_nome }}</td>
                    <td>{{ pedido.created_at|date('d/m/Y H:i') }}</td>
                    <td><span class="badge bg-{{ pedido.status_cor }}">{{ pedido.status_nome }}</span></td>
                    <td>R$ {{ pedido.valor_total|number_format(2, ',', '.') }}</td>
                    <td class="text-end"><a href="/admin/pedidos/{{ pedido.id }}" class="btn btn-secondary btn-sm">Ver Detalhes</a></td>
                </tr>
                {% else %}
                <tr><td colspan="6" class="text-center">Nenhum pedido encontrado.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}