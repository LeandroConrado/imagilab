{% extends "admin/layout.twig" %}
{% block content %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center"><span>Condições de Pagamento</span><a href="/admin/configuracoes/condicoes-pagamento/create" class="btn btn-success btn-sm">Adicionar Nova</a></div>
    <div class="card-body">
        <table class="table">
            <thead><tr><th>Nome</th><th>Parcelas</th><th>Intervalo (dias)</th><th>Status</th><th class="text-end">Ações</th></tr></thead>
            <tbody>
            {% for item in itens %}
                <tr><td>{{ item.nome }}</td><td>{{ item.numero_parcelas }}</td><td>{{ item.intervalo_dias }}</td><td>{{ item.ativo ? '<span class="badge bg-success">Ativo</span>' : '<span class="badge bg-warning">Inativo</span>' }}</td>
                <td class="text-end"><a href="/admin/configuracoes/condicoes-pagamento/{{ item.id }}/edit" class="btn btn-primary btn-sm me-2">Editar</a><form action="/admin/configuracoes/condicoes-pagamento/{{ item.id }}/delete" method="POST" class="d-inline" onsubmit="return confirm('Tem certeza?');"><button type="submit" class="btn btn-danger btn-sm">Excluir</button></form></td>
                </tr>
            {% else %}
                <tr><td colspan="5" class="text-center">Nenhum item encontrado.</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}