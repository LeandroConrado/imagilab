{% extends "admin/layout.twig" %}
{% block content %}
<div class="card">
    <div class="card-header">Novo Status de Pedido</div>
    <div class="card-body">
        <form action="/admin/configuracoes/pedido-status" method="POST">
            <div class="mb-3"><label for="nome" class="form-label">Nome</label><input type="text" class="form-control" id="nome" name="nome" required></div>
            <div class="mb-3">
                <label for="cor_badge" class="form-label">Cor do Badge</label>
                <select class="form-select" id="cor_badge" name="cor_badge">
                    <option value="primary">Azul (Primary)</option>
                    <option value="secondary" selected>Cinza (Secondary)</option>
                    <option value="success">Verde (Success)</option>
                    <option value="danger">Vermelho (Danger)</option>
                    <option value="warning">Amarelo (Warning)</option>
                    <option value="info">Azul Claro (Info)</option>
                    <option value="dark">Preto (Dark)</option>
                </select>
            </div>
            <a href="/admin/configuracoes/pedido-status" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
    </div>
</div>
{% endblock %}