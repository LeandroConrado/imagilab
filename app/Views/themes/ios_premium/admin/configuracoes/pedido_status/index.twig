{% extends "admin/layout.twig" %}
{% block content %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center"><span>Status de Pedido</span><a href="/admin/configuracoes/pedido-status/create" class="btn btn-success btn-sm">Adicionar Novo</a></div>
    <div class="card-body">
        <table class="table">
            <thead><tr><th>Nome</th><th>Exemplo</th><th class="text-end">Ações</th></tr></thead>
            <tbody>
            {% for item in itens %}
                <tr>
                    <td>{{ item.nome }}</td>
                    <td><span class="badge bg-{{ item.cor_badge }}">{{ item.nome }}</span></td>
                    <td class="text-end">
                        <a href="/admin/configuracoes/pedido-status/{{ item.id }}/edit" class="btn btn-primary btn-sm">Editar</a>
                        <form action="/admin/configuracoes/pedido-status/{{ item.id }}/delete" method="POST" class="d-inline" onsubmit="return confirm('Tem certeza?');"><button type="submit" class="btn btn-danger btn-sm">Excluir</button></form>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="3" class="text-center">Nenhum item encontrado.</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}