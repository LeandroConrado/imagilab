{% extends "admin/layout.twig" %}

{% block content %}
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Categorias Cadastradas</span>
            <a href="/admin/categorias/create" class="btn btn-success btn-sm">Nova Categoria</a>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th>Imagem</th>
                        <th>Nome</th>
                        <th>Slug</th>
                        <th>Status</th>
                        <th>Destaque</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {% for categoria in categorias %}
                        <tr>
                            <td>
                                {% if categoria.imagem %}
                                    <img src="{{ categoria.imagem }}" alt="{{ categoria.nome }}" height="40">
                                {% else %}
                                    <span class="text-muted">Sem Imagem</span>
                                {% endif %}
                            </td>
                            <td>{{ categoria.nome }}</td>
                            <td>{{ categoria.slug }}</td>
                            <td>
                                {% if categoria.status %}
                                    <span class="badge bg-success">Ativo</span>
                                {% else %}
                                    <span class="badge bg-warning">Inativo</span>
                                {% endif %}
                            </td>
                             <td>
                                {% if categoria.destaque %}
                                    <span class="badge bg-info">Sim</span>
                                {% else %}
                                    <span class="badge bg-secondary">Não</span>
                                {% endif %}
                            </td>
                            <td class="text-end">
                                <a href="/admin/categorias/{{ categoria.id }}/edit" class="btn btn-primary btn-sm">Editar</a>
                                <form action="/admin/categorias/{{ categoria.id }}/delete" method="POST" class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir esta categoria?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">Nenhuma categoria encontrada.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}