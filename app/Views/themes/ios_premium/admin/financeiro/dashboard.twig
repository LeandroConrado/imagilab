{% extends "admin/layout.twig" %}
{% block content %}
<div class="row">
    <div class="col-md-3"><div class="card text-white bg-danger mb-3"><div class="card-header">Total a Pagar</div><div class="card-body"><h5 class="card-title">R$ {{ metricas.a_pagar|number_format(2, ',', '.') }}</h5></div></div></div>
    <div class="col-md-3"><div class="card text-white bg-success mb-3"><div class="card-header">Total a Receber</div><div class="card-body"><h5 class="card-title">R$ {{ metricas.a_receber|number_format(2, ',', '.') }}</h5></div></div></div>
    <div class="col-md-3"><div class="card text-dark bg-light mb-3"><div class="card-header">Balanço Pendente</div><div class="card-body"><h5 class="card-title">R$ {{ metricas.balanco_pendente|number_format(2, ',', '.') }}</h5></div></div></div>
    <div class="col-md-3"><div class="card text-white bg-primary mb-3"><div class="card-header">Saldo do Mês</div><div class="card-body"><h5 class="card-title">R$ {{ metricas.saldo_mes|number_format(2, ',', '.') }}</h5></div></div></div>
</div>
<div class="d-grid gap-2">
    <a href="/admin/financeiro/lancamentos" class="btn btn-dark">Ver Todos os Lançamentos</a>
</div>
{% endblock %}