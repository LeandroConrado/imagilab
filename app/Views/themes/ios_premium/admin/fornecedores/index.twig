{% extends "admin/layout.twig" %}

{% block content %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Fornecedores Cadastrados</span>
        <a href="/admin/fornecedores/create" class="btn btn-success btn-sm">Novo Fornecedor</a>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Documento</th>
                    <th>Cidade/UF</th>
                    <th>Status</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for fornecedor in fornecedores %}
                    <tr>
                        <td>{{ fornecedor.nome }}</td>
                        <td>{{ fornecedor.documento }}</td>
                        <td>{{ fornecedor.cidade ? fornecedor.cidade ~ '/' ~ fornecedor.estado : 'N/A' }}</td>
                        <td>
                            {% if fornecedor.status %}
                                <span class="badge bg-success">Ativo</span>
                            {% else %}
                                <span class="badge bg-warning">Inativo</span>
                            {% endif %}
                        </td>
                        <td class="text-end">
                            <a href="/admin/fornecedores/{{ fornecedor.id }}/edit" class="btn btn-primary btn-sm">Editar</a>
                            <form action="/admin/fornecedores/{{ fornecedor.id }}/delete" method="POST" class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir este fornecedor?');">
                                <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Nenhum fornecedor encontrado.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}