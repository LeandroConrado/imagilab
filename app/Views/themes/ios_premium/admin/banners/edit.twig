{% extends "admin/layout.twig" %}
{% block content %}
<div class="card">
    <div class="card-header">Editando Banner</div>
    <div class="card-body">
        <form action="/admin/banners/{{ banner.id }}" method="POST" enctype="multipart/form-data">
            {% include 'admin/banners/_form.twig' with {'banner': banner} %}
            <a href="/admin/banners" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
        </form>
    </div>
</div>
{% endblock %}
