{% extends "admin/layout.twig" %}

{% block content %}
<div class="card">
    <div class="card-header">Novo Usuário</div>
    <div class="card-body">
        <form action="/admin/usuarios" method="POST">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="nome" class="form-label">Nome Completo</label>
                    <input type="text" class="form-control" id="nome" name="nome" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="senha" class="form-label">Senha</label>
                    <input type="password" class="form-control" id="senha" name="senha" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="role_id" class="form-label">Nível de Acesso</label>
                    <select name="role_id" id="role_id" class="form-select">
                        <option value="2">Operador</option>
                        <option value="1">Administrador</option>
                    </select>
                </div>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="1" id="ativo" name="ativo" checked>
                <label class="form-check-label" for="ativo">Usuário Ativo</label>
            </div>
            <a href="/admin/usuarios" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Salvar Usuário</button>
        </form>
    </div>
</div>
{% endblock %}
